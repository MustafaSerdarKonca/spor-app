rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kural: Her kullanıcı sadece kendi verisini okuyabilir ve yazabilir.
    // 'users' koleksiyonunun altındaki {userId} dokümanı, giriş yapan kişinin ID'sine (request.auth.uid) eşit olmalıdır.
    
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
